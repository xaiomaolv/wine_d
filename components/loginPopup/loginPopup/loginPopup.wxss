  margin-left: 10rpx;
}
.btn_wechat{
  background-color: black;
  color: white;
}
.agreememt{
  margin: 30rpx 60rpx;
  font-size: 26rpx;
}
.isLogin {
  padding: 50rpx;
  background: #fff;
  border-radius: 10rpx;
  z-index: 1001;
}

.isLoginBtn {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
}

.isLoginBtn button {
  background: #fff;
  width: 100%;
  /* height: 68rpx; */
  line-height: 48rpx;
  /* padding-left: 0rpx;
  padding-right: 0rpx;
  margin-right: 0rpx;
  margin-left: 0rpx; */
