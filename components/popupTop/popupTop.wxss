  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  align-items: center;
  margin: 10rpx 0;
  color: #B81728;
}

.row-btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-top: 1rpx solid #f1f1f1;
}

.row-btn view {
  flex: 1;
  text-align: center;
  margin: 20rpx 5%;
  padding: 12rpx 0;
  border-radius: 30rpx;
}

.left-btn {
  border-radius: 30rpx;
  border: 1rpx solid black;
}

.right-btn {
  background-color: black;
  color: white;
  border-radius: 30rpx;
}

.fixed {
  position: fixed;
  bottom: 0;
  width: 50%;
}

.transTop {
  overflow: hidden;
  animation: scroll 0.3s linear;
}

@keyframes scroll {
  0% {
    transform: translateY(50%);
  }

  100% {
    transform: translateY(0);
  }
}

.transBottom {
  overflow: hidden;
  animation: scrollt 0.3s linear;
}

@keyframes scrollt {
  0% {
    transform: translateY(-50%);
  }

  100% {
    transform: translateY(10%);
  }
}

.tx-ct {
  text-align: center;
}

.clr-9491 {
  color: #949191;
}

/* scroll-view 滑动 */
.scroll-view {
  width: 100%;
  /* height: 100px; */
  white-space: nowrap;
}

.scroll-item {
  display: inline-block;
  width: 20%;
  /* height: 100px; */
}

.active view {
  /* width: ; */
  border-bottom: 6rpx solid #2b2928;
  color: #1b1b19;
}

/* 动态按钮 */
.btn {
  border-radius: 40rpx;
  text-align: left;
  font-size: 30rpx;
  background-color: rgba(255, 255, 255, 1);
  border: 2rpx solid #caccce;
  color: #8a8e99;
  padding: 0rpx 30rpx;
  margin: 10rpx
}

.btn::after {
  border: none
}
.btn.active {
  background-color: #101213;
  border: 2rpx solid #101213;
  color: #fff
}