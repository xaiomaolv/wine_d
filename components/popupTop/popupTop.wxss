/* components/popup/popup.wxss */
@import '/css/flex.wxss';

/* 蒙层 */
.popup-box {
  position: absolute;
  z-index: 99;
  top: 0;
  background-color: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100%;
}

/* 上 */
.info-top {
  position: fixed;
  z-index: 999;
  width: 100%;
  top: 0;
  background-color: white;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}

.row-info {
