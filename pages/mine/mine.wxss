/* 动态按钮 */
.btn {
  border-radius: 40rpx;
  text-align: left;
  font-size: 30rpx;
  background-color: rgba(255, 255, 255, 1);
  border: 2rpx solid #caccce;
  color: #8a8e99;
  padding: 0rpx 30rpx;
  margin: 0rpx 10rpx 10rpx 0rpx
}

.btn::after {
  /* border: none */
}

.btn.active {
  background-color: #101213;
  /* border: 2rpx solid #101213; */
  color: #fff
}

.row-btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  border: 1rpx solid #3b3737;
}

.row-btn view {
  flex: 1;
  text-align: center;
  margin: 20rpx 5%;
  padding: 12rpx 0;
  border-radius: 30rpx;
}